{
  "name": "kaam-milega-backend",
  "version": "1.0.0",
  "description": "WhatsApp-based platform connecting daily-wage labourers with contractors in India",
  "main": "server.ts",
  "scripts": {
    "start": "tsx server.ts",
    "dev": "nodemon",
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "seed": "tsx prisma/seed.ts",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:validate": "npx prisma validate",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["whatsapp", "baileys", "daily-wage", "jobs", "india", "typescript"],
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@hapi/boom": "^10.0.1",
    "@prisma/client": "^6.3.0",
    "@whiskeysockets/baileys": "^6.7.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "mime-types": "^2.1.35",
    "pino": "^9.6.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
